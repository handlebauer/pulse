{
    "name": "radio-stream-library",
    "version": "1.0.0",
    "description": "A powerful library for streaming, processing, and analyzing radio streams",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.mjs",
    "exports": {
        ".": {
            "import": "./src/index.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "type": "module",
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/handlebauer/radio"
    },
    "keywords": [
        "radio",
        "stream",
        "audio",
        "transcription",
        "ffmpeg"
    ],
    "scripts": {
        "prepare": "husky",
        "lint": "eslint \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "db:local:seed": "bun run scripts/db/seed.ts",
        "db:gen-types": "bunx supabase gen types typescript --local > src/lib/db/types.ts",
        "db:local:init": "bunx supabase db reset && bun run db:gen-types && bun run db:local:seed"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint": "^9.21.0",
        "husky": "^9.1.7",
        "prettier": "3.5.2",
        "tsup": "^8.0.2",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.25.0",
        "vitest": "^1.3.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@google/generative-ai": "^0.22.0",
        "@supabase/supabase-js": "^2.49.1",
        "dedent": "^1.5.3",
        "ora": "^8.2.0"
    },
    "engines": {
        "node": ">=18",
        "bun": ">=1.0.0"
    }
}
